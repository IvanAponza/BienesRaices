extends ../layout/main

block contenido 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal.text-green-400 Raices  
        h2.text-center.text-2xl.font-extrabold= pagina 

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p.bg-red-500.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg 

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow 
                form.space-y-5(action="/auth/registro" method="POST" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="nombre") Nombre 
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="email") Email 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email" value= usuario ? usuario.email : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu contraseña" type="password" name="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="repite_password") Repite Contraseña
                        input#repite_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu contraseña" type="password" name="repite_password")
                    
                    input(class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")                   
                    
                    div.flex.items-center.justify-between
                        a.text-blue-500.text-sm(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-blue-500.text-sm(href="/auth/olvide-password") Olvide mi Contraseña 