extends ../layout/admin

block style 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal.text-green-400 Raices  
        h2.text-center.text-2xl.font-extrabold= pagina

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p.bg-red-500.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg  

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-5xl my-10 md:px-10")
            form.space-y-8(method="POST")
                input(type="hidden", name="_csrf", value= csrfToken)
                div.space-y-5 
                    h3.text-lg.leading-6.font-medium.text-gray-900 Informacion General 
                    p.text.gray-600 A침ade Informaci칩n sobre la propiedad en venta 

                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="titulo") Titulo del Anuncio 
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Titulo Propiedad Eje: Casa en la playa" type="text" name="titulo" value= datos.titulo ? datos.titulo : "")

                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="descripcion") Descripcion
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Descripcion de la Propiedad" name="descripcion")= datos.descripcion ? datos.descripcion : ""

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="categoria") Categoria 
                            select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")
                                option(value="") - Seleccione -
                                each categoria in categorias 
                                    option(value=categoria.id selected= datos.categoriaId ? datos.categoriaId == categoria.id ? true : false : null)= categoria.nombre  

                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="precio") Precio
                            select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")
                                option(value="") - Seleccione -
                                each precio in precios 
                                    option(value=precio.id selected= datos.precioId ? datos.precioId == precio.id ? true : false : null)= precio.nombre 

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="habitaciones") habitaciones
                            select#habitaciones.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="habitaciones")
                                option(value="") - Seleccione -
                                - let h = 1;
                                    while h < 6
                                        option(value= h selected= datos.habitaciones ? datos.habitaciones == h ? true : false : null) #{h++} 

                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="parqueadero") Parqueadero
                            select#parqueadero.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="parqueadero")
                                option(value="") - Seleccione -
                                - let p = 1;
                                    while p < 6
                                        option(value= p selected= datos.parqueadero ? datos.parqueadero == p ? true : false : null) #{p++} 

                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="banos") Ba침os
                            select#banos.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="banos")
                                option(value="") - Seleccione -
                                - let b = 1;
                                    while b < 6
                                        option(value= b selected= datos.banos ? datos.banos == b ? true : false : null) #{b++}

                    div.border-gray-200.border-t.py-5.space-y-5
                        h3.text-lg.leading-6.font-medium.text-gray-900 Ubicaci칩n
                        p.text.gray-600 Ubica la propiedad en el mapa
                        
                        #mapa.h-96

                        div 
                            p.calle= datos.calle ? datos.calle : ''
                        
                        input(type="hidden" name="calle" id="calle" value= datos.calle ? datos.calle : '')
                        input(type="hidden" name="lat" id="lat" value= datos.lat ? datos.lat : '')
                        input(type="hidden" name="lng" id="lng" value= datos.lng ? datos.lng : '')

                    input(class="w-full py-3 bg-green-500 hover:bg-green-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Guardar Cambios")

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    //- permite acceder a la inf de las calles cuando le pasas las coordenadas
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js") 
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    //- script compilado dir public
    script(src="/js/mapa.js")